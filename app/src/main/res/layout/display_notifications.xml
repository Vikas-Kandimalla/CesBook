<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:clipToPadding="false"
    android:paddingBottom="5sp"
    android:paddingTop="5sp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6sp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="5sp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notifications_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3sp"
                android:layout_marginStart="3sp"
                android:padding="3sp"
                android:text="Water quality"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notifications_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:ellipsize="end"
                android:lines="2"
                android:padding="3sp"
                android:text="A dedicated team of Engineers, the Contractor, numbers of labourers, a driver of the excavator deserve kudos for their."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/notifications_post_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="10sp"
                android:padding="3sp"
                android:text="posted by admin on 18/01 at 9:30 AM"
                android:textAlignment="textEnd"
                android:textSize="13sp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
